<%- include('../partials/head') %>
<title>Admin || Login</title>
<%- include('../partials/headclose') %>
<div class="loginBody">
  <form method="post" action="/admin/login" novalidate class="loginForm">
    <div class="logoWrapper">
      <img src="/images/logo.png" class="logo" />
    </div>
    <%- include('../partials/flash') %>
    <div class="mb-3">
      <label for="formGroupExampleInput" class="form-label">Email</label>
      <input required name="username" type="email" class="form-control" placeholder="example@example.com">
    </div>
    <div>
      <label for="formGroupExampleInput" class="form-label">Password</label>
      <input required name="password" type="password" class="form-control" placeholder="Password">
    </div>
    <button class="loginButton">Log In</button>
  </form>
</div>
<%- include('../partials/bodyclose') %>
